@using TextPortCore.Models
@using TextPortCore.Helpers
@model List<GroupMember>

@if (Model.Count() > 0)
{
    int rowId = 1;
    foreach (GroupMember member in Model)
    {
        string bgClass;
        if (rowId % 2 == 0)
        {
            bgClass = "table-primary";
        }
        else
        {
            bgClass = string.Empty;
        }
        rowId++;
        <tr class="@bgClass">
            <td>@member.MemberName</td>
            <td>@Utilities.NumberToDisplayFormat(member.MobileNumber, 22)</td>
            <td align="center">
                <button onclick="deleteMember(@member.GroupMemberId)" class="btn">
                    <span class="fa fa-trash fa-lg list-icon" aria-hidden="true"></span>
                </button>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="4" class="text-center">No members in this group</td>
    </tr>
}