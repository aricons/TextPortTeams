
@{
    ViewBag.Title = "Test Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function demo() {
        var theme = $('select[name=selector]').val();
        switch (theme) {
            case "success":
                $.jnoty("Your email was verified.", {
                    header: 'Success',
                    sticky: false,
                    theme: 'jnoty-' + theme,
                    icon: 'fa fa-check-circle',
                });
                break;

            case "warning":
                $.jnoty("I am a warning message", {
                    sticky: true,
                    header: 'Warning',
                    theme: 'jnoty-' + theme,
                    icon: 'fa fa-info-circle'
                });
                break;

            case "info":
                $.jnoty("Hello, this is a test message. The quick brown fox jumps over the lazy dog. Why did that brown fox jump over the dog, and why did he want to do it quickly?", {
                    sticky: true,
                    header: 'Message received from (818) 234-1076 to (949) 555-1210',
                    theme: 'jnoty-info', // + theme,,
                    easing: 'swing',
                    life: 6000
                });
                break;

            case "danger":
                $.jnoty("I am a warning message", {
                    sticky: true,
                    header: 'Danger',
                    theme: 'jnoty-' + theme,
                    icon: 'fa fa-info-circle'
                });
                break;

            default:
                $.jnoty("I am an info message", {
                    sticky: false,
                    header: 'Information',
                    theme: 'jnoty-' + theme,
                    icon: 'fa fa-info-circle',
                    life: 500,
                });
        }
    }
</script>

<h2>Test Page</h2>

<div class="container" style="margin-top:150px;">
    <div class="d-flex align-item-center flex-column">
        <div class="d-flex align-items-end">
            <div style="width:13%;">
                <span>Select A Theme</span>
                <select class="custom-select" name="selector">
                    <option selected value="success">Success</option>
                    <option value="warning">Warning</option>
                    <option value="info">Information</option>
                    <option value="danger">Danger</option>
                </select>
            </div>
            <div>
                <button class="btn btn-success ml-1" onclick="demo();">Show The Notification</button>
            </div>
        </div>
    </div>
</div>
