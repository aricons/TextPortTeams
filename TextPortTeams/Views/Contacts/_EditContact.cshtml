@using TextPortCore.Models
@model Contact
<div class="modal fade" role="dialog" id="edit-contact-modal-sub">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit Contact</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            @using (Html.BeginForm("Edit", "Contacts", FormMethod.Post, new { id = "edit-contact-form" }))
            {
                <div class="modal-body">
                    @Html.HiddenFor(m => m.ContactId)
                    @Html.HiddenFor(m => m.AccountId)
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Contact name" })
                        @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.MobileNumber, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.MobileNumber, new { @class = "form-control num-input", placeholder = "Mobile number" })
                        @Html.ValidationMessageFor(m => m.MobileNumber, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" id="btnEditContact" class="btn btn-primary">Apply Changes</button>
                </div>
            }
        </div>
    </div>
</div>
