@model TextPortCore.Models.GroupText
    <br />
    <div class="row">
        <div class="col-md-10">
            <p>Processing Results</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-sm">
                <thead>
                    <tr class="bg-primary text-white">
                        <th class="text-center" scope="col">#</th>
                        <th scope="col">Status</th>
                        <th scope="col">Result</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.ResultsList.Count; i++)
                    {
                        <tr>
                            <td class="text-center"><label class="form-label font-weight-bold">@((i + 1).ToString())</label></td>
                            <td><label class="form-label-sm">@Model.ResultsList[i].ProcessingMessage</label></td>
                            <td><label class="form-label-sm">@Model.ResultsList[i].Result</label></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>