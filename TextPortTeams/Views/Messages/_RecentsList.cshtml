@using TextPortCore.Models
@if (Model.Count == 0)
{
    <div id="recent_0">
        <div class="text-center">
            <br />
            <h6>No messages for this number</h6>
        </div>
    </div>
}
else
{
    foreach (Recent recent in Model)
    {
        <div id="recent_@recent.Number" class="chl chat_list@(recent.IsActiveMessage ? " active_number" : "")">
            <div class="chat_people">
                <div class="chat_ib">
                    <h5>
                        @recent.NumberDisplayFormat<span class="chat_date">@string.Format("{0:MMMM dd, yy | hh:mm tt}", recent.TimeStamp)</span><a href="#" class="apply-contact-button ml-2" data-target="#apply-contact-modal" data-url="/contacts/apply/@recent.ContactId?number=@recent.Number"><i class="fa fa-user"></i></a>
                    </h5>
                    <p>@recent.Message</p>
                    <a class="chat_del" href="#" onclick="delMsgsForNum(@recent.Number)"><i class="fa fa-trash fa-lg"></i></a>
                </div>
            </div>
        </div>
    }
}