@model TextPortCore.ViewModels.UserViewModel
<style>
    .edit-header {
        background-color: #007bff;
        font-weight: 600;
        color: white;
    }
</style>
<div class="modal fade" id="user-modal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("add-user", "users", FormMethod.Post, new { id = "form-add" }))
            {
                <div class="modal-header bg-gradient-light">
                    <h5 class="modal-title ">Add User</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body edit-container">
                    <div class="card">
                        <div class="card-header edit-header">
                            <span class="h6 edit-header">Name &amp; Location</span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Name</label>
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>User Name</label>
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Password</label>
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Confirm Password</label>
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Branch</label>
                                        @Html.DropDownListFor(m => m.BranchId, Model.BranchList, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(m => m.BranchId, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Role</label>
                                        @Html.DropDownListFor(m => m.RoleId, Model.RoleList, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(m => m.RoleId, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-header edit-header">
                            <span class="h6 edit-header">Contact Details</span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Email</label>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Phone</label>
                                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(m => m.Phone, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" id="modalClose" data-dismiss="modal"><span class='fa fa-window-close'></span>&nbsp;&nbsp;Cancel</button>
                    <button type="submit" class="btn btn-primary"><span class='fa fa-save'></span>&nbsp;&nbsp;Save</button>
                </div>
            }
        </div>
    </div>
</div>
