@using TextPortCore.Models
@model GroupMember

<div class="modal fade" role="dialog" id="member-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Add Group Member</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            @using (Html.BeginForm("AddMember", "Groups", FormMethod.Post, new { id = "form-addmember" }))
            {
                @Html.HiddenFor(m => m.GroupId)
                <div class="modal-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.MemberName, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.MemberName, new { @class = "form-control", placeholder = "Name" })
                        @Html.ValidationMessageFor(m => m.MemberName, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.MobileNumber, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.MobileNumber, new { @class = "form-control num-input", placeholder = "Number" })
                        @Html.ValidationMessageFor(m => m.MobileNumber, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" id="btnAddMember" class="btn btn-primary">Add Member</button>
                </div>
            }
        </div>
    </div>
</div>
