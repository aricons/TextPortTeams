@using TextPortCore.Models
@using TextPortCore.Helpers;

@model ActivateAccountRequest
@{
    ViewBag.Title = "TextPort: Account Activated";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <div class="card">
        <div class="card-header">
            <h4>@Model.CompletionTitle</h4>
        </div>
        <div class="card-body">
            @if (@Model.Success)
            {
                <br />
                <h5>
                    Your free trial account <strong>@Model.UserName</strong> was successfully activated. Your number <strong>@Utilities.NumberToDisplayFormat(Model.VirtualNumber, 22)</strong> is ready for use.
                    You have <strong>@String.Format("{0:C2}", Model.CreditAmount)</strong> free credit, which is good for approximately 10 SMS messages.
                </h5>
                <br />
                <p>
                    A reminder that trial accounts require you to first send a message to a number before you can receive messages from that number.
                    Otherwise, your trial account has all the same features as a regular account.
                </p>

                <br />
                <h5 class="text-center font-weight-bold">
                    <a href="/account/profile">Update Your Profile</a>&nbsp;&nbsp;or&nbsp;&nbsp;<a href="/messages">Start Sending Messages</a>
                </h5>
                <br />
                <h5>Thanks for trying TextPort</h5>
                <br />
            }
            else
            {
                <h5>There was a problem activating your account.</h5>
                <br />
                <p>@Html.Raw(Model.CompletionMessage)</p>
            }

        </div>
    </div>
</div>