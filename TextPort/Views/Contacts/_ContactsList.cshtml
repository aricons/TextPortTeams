@using TextPortCore.Models
@using TextPortCore.Helpers
@model List<Contact>

@if (Model.Count() > 0)
{
    int rowId = 1;
    foreach (Contact contact in Model)
    {
        string bgClass;
        if (rowId % 2 == 0)
        {
            bgClass = "table-primary";
        }
        else
        {
            bgClass = string.Empty;
        }
        rowId++;
        <tr class="@bgClass">
            <td>@contact.Name</td>
            <td>@Utilities.NumberToDisplayFormat(contact.MobileNumber, 22)</td>
            <td align="center">
                <button onclick="deleteMember(@contact.ContactId)" class="btn">
                    <span class="fa fa-trash fa-lg list-icon" aria-hidden="true"></span>
                </button>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="4" class="text-center">No contacts have been added yet</td>
    </tr>
}