@using TextPortCore.Models

@if (Model.Count == 0)
{
    <div id="recent_0">
        <div class="text-center">
            <br />
            <h6>No messages for this number</h6>
        </div>
    </div>
}
else
{
    foreach (Recent recent in Model)
    {
        <div id="recent_@recent.Number" class="chl chat_list@(recent.IsActiveMessage ? " active_number" : "")">
            <div class="chat_people">
                <div class="chat_img"> <img src="~/content/images/user-profile.png"> </div>
                <div class="chat_ib">
                    <h5>@recent.NumberDisplayFormat<span class="chat_date">@string.Format("{0:MMMM dd, yy | hh:mm tt}", recent.TimeStamp)</span></h5>
                    <p>
                        @recent.Message
                    </p>
                </div>
            </div>
        </div>
    }
}