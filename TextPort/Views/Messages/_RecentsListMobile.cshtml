@using TextPortCore.Models
@using TextPortCore.Helpers
<select id="recents_list_m" class="form-control">
    @if (Model.Count == 0)
    {
        <option value="recent_0">No recent messages</option>
    }
    else
    {
        foreach (Recent recent in Model)
        {
            <option value="@recent.Number">@Utilities.NumberToDisplayFormat(recent.Number, 22)</option>
        }
    }
</select>