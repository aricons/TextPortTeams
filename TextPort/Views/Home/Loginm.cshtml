@model TextPortCore.Models.LoginCredentials
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <br />
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Login</h4>
                </div>
                <div class="card-body">
                    <br />
                    @using (Html.BeginForm("loginm", "home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="modal-body">
                            <div class="form-group">
                                @Html.LabelFor(m => m.UserNameOrEmail, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.UserNameOrEmail, new { @class = "form-control", placeholder = "Username or email address" })
                                @Html.ValidationMessageFor(m => m.UserNameOrEmail, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.LoginPassword, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.LoginPassword, new { @class = "form-control", placeholder = "Password", @type = "password" })
                                @Html.ValidationMessageFor(m => m.LoginPassword, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <p>
                                    @Html.ActionLink("Forgot your password?", "ForgotPassword", "Account")
                                </p>
                            </div>
                            @if (!String.IsNullOrEmpty(Model.Result))
                            {
                                <div id="loginMessage" class="alert alert-danger">
                                    <label>@Model.Result</label>
                                </div>
                            }
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
</div>

