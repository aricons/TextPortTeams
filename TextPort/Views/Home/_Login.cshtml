@model TextPortCore.Models.LoginCredentials

<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="addContactLabel">Log In</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { id = "form-login" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserNameOrEmail, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.UserNameOrEmail, new { @class = "form-control", placeholder = "Username or email address" })
                        @Html.ValidationMessageFor(m => m.UserNameOrEmail, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.LoginPassword, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.LoginPassword, new { @class = "form-control", placeholder = "Password", @type = "password" })
                        @Html.ValidationMessageFor(m => m.LoginPassword, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <p>
                            @Html.ActionLink("Forgot your password?", "ForgotPassword", "Account")
                        </p>
                    </div>
                    <div id="loginMessage" class="alert alert-danger collapse">
                        <label id="lblMessage"></label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" id="btnSubmitLogin" class="btn btn-primary">Login</button>
                </div>
            }
        </div>
    </div>
</div>
